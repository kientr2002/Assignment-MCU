#include "tun_fsm.h"

void tun_fsm_run(){
	switch(status) {

	case TUN_RED1_GREEN2:
		RED_1();
		GREEN_2();
		GREEN_3();

		if (timer1_flag == 1) {
			status = TUN_RED1_GREEN2;
		}
		if (Button1_Is_Pressed() == 1) {
			status = AUTO_RED1_GREEN2;
			SetTimer1(3000);
		}
		if (Button2_Is_Pressed() == 1) {
			status = TUN_RED;
			IncRed5s(5000);
		}
		break;

	case TUN_RED1_YELLOW2:
		RED_1();
		YELLOW_2();
		GREEN_3();

		if (timer1_flag == 1) {
			status = TUN_RED1_YELLOW2;
		}
		if (Button1_Is_Pressed() == 1) {
			status = AUTO_RED1_GREEN2;
			SetTimer1(3000);
		}
		if (Button2_Is_Pressed() == 1) {
			status = TUN_YELLOW;
			IncYellow2s(2000);
		}
		break;

	case TUN_GREEN1_RED2:
		GREEN_1();
		YELLOW_2();
		RED_3();

		if (timer1_flag == 1) {
			status = TUN_GREEN1_RED2;
		}
		if (Button1_Is_Pressed() == 1) {
			status = MAN_YELLOW;
			SetTimer1(2000);
		}
		if (Button2_Is_Pressed() == 1) {
			status = TUN_GREEN;
			IncGreen3s(3000);
		}
		break;

	case TUN_YELLOW1_RED2:
		YELLOW_1();
		RED_2();
		RED_3();

		if (timer1_flag == 1) {
			status = TUN_YELLOW1_RED2;
		}
		break;
	}
}



